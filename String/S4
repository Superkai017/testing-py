def analyse_password(password):
    score = 0
    feedback = []
    if len(password) >= 8:
        score += 2
        feedback.append("Password length is good")
    elif len(password) >= 12:
        score += 3
        feedback.append("Password length is strong")
    else:
        feedback.append("Password is too short")
    if any(c.islower() for c in password):
        score += 1
        feedback.append("Contains lowercase letters")
    else:
        feedback.append("Add lowercase letters for better security")
    if any(c.isupper() for c in password):
        score += 1
        feedback.append("Contains uppercase letters")
    else:
        feedback.append("Add uppercase letters for better security")
    if any(c.isdigit() for c in password):
        score += 1
        feedback.append("Contains numbers")
    else:
        feedback.append("Add numbers for better security")
    if any(c in "!@#$%^&*()-+" for c in password):
        score += 1
        feedback.append("Contains special characters")
    else:
        feedback.append("Add special characters for better security")
    speicall_chars = sum(c in "!@#$%^&*()-+" for c in password)
    if speicall_chars > 1:
        score += 1
        feedback.append("Good use of special characters")
    else:
        feedback.append("use more special characters for better security")
    common_pattern = ['123', 'abc', 'password', 'qwerty', 'letmein']
    if any(pattern in password.lower() for pattern in common_pattern):
        score -= 2
        feedback.append("Avoid common patterns like '123', 'abc', etc.")
    else:
        feedback.append("No common patterns detected")
    score = min(score,10)
    return score, feedback
def get_rating(score):
    if score >= 8:
        return "Strong"
    elif score >= 5:
        return "Moderate"
    elif score >= 3:
        return "Weak"
    else:
        return "Very Weak"
def main():
    password = input("Enter a password to analyze: ")
    score,feedback = analyse_password(password)
    rating = get_rating(score)
    print(f"Password Score: {score}/10")
    print(f"Password Rating: {rating}")
    print("Feedback:")
    for f in feedback:
        print(f"- {f}")
main()